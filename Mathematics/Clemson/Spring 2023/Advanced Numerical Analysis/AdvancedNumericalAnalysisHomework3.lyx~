\begin_layout Subsection*
Classical Gram-Schmidt
\end_layout

\begin_layout Standard
\align center
\begin_inset listings
inline false
status open

\begin_layout Plain Layout

function [Q,R] = gs(A)      
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

[m,n] = size(A); Q = zeros(m,n); V = zeros(m,n); R = zeros(m,n);
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

for j = 1:n    
\end_layout

\begin_layout Plain Layout

   V(:,j) = A(:,j);    
\end_layout

\begin_layout Plain Layout

   for i = 1:j-1      
\end_layout

\begin_layout Plain Layout

      R(i,j) = Q(:,i)'*A(:,j);        
\end_layout

\begin_layout Plain Layout

      V(:,j) = V(:,j) - R(i,j)*Q(:,i);   
\end_layout

\begin_layout Plain Layout

   end; 
\end_layout

\begin_layout Plain Layout

   R(j,j) = norm(V(:,j)) ;    
\end_layout

\begin_layout Plain Layout

   Q(:,j) = V(:,j) / R(j,j) ;     
\end_layout

\begin_layout Plain Layout

   end; 
\end_layout

\begin_layout Plain Layout

end;
\end_layout

\end_inset


\end_layout

\begin_layout Subsection*
Modified Gram-Schmidt
\end_layout

\begin_layout Standard
\align center
\begin_inset listings
inline false
status open

\begin_layout Plain Layout

function [Q,R] = mgs(A)  
\end_layout

\begin_layout Plain Layout

   
\end_layout

\begin_layout Plain Layout

[m,n] = size(A); Q = zeros(m,n); V = A; R = zeros(n,n);
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

for i = 1:n    
\end_layout

\begin_layout Plain Layout

   R(i,i) = norm(V(:,i));    
\end_layout

\begin_layout Plain Layout

   Q(:,i) = V(:,i) / R(i,i);  
\end_layout

\begin_layout Plain Layout

   for j = (i+1):n     
\end_layout

\begin_layout Plain Layout

      R(i,j) = Q(:,i)'*V(:,j);  
\end_layout

\begin_layout Plain Layout

      V(:,j) = V(:,j) - R(i,j)*Q(:,i); 
\end_layout

\begin_layout Plain Layout

   end; 
\end_layout

\begin_layout Plain Layout

end;
\end_layout

\end_inset


\end_layout

\begin_layout Subsection*
Double Modified Gram-Schmidt
\end_layout

\begin_layout Standard
\align center
\begin_inset listings
inline false
status open

\begin_layout Plain Layout

function [Q,R] = mgsd(A) 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

[Q1,R1] = mgs(A); 
\end_layout

\begin_layout Plain Layout

[Q,R2] = mgs(Q1); 
\end_layout

\begin_layout Plain Layout

R = R2*R1;
\end_layout

\end_inset


\end_layout

\begin_layout Subsection*
Householder Factorization
\end_layout

\begin_layout Standard
This algorithm inputs an 
\begin_inset Formula $m\times n$
\end_inset

 matrix 
\begin_inset Formula $A$
\end_inset

 (where 
\begin_inset Formula $m\geq n$
\end_inset

) and spits out an upper triangular 
\begin_inset Formula $n\times n$
\end_inset

 matrix 
\begin_inset Formula $\widehat{R}$
\end_inset

 as well as an 
\begin_inset Formula $m\times n$
\end_inset

 matrix 
\begin_inset Formula $V$
\end_inset

 whose columns are all orthogonal with each other, where 
\begin_inset Formula $\widehat{R}$
\end_inset

 is the matrix which appears in a reduced QR factorization 
\begin_inset Formula $A=\widehat{Q}\widehat{R}$
\end_inset

, and where the 
\begin_inset Formula $i$
\end_inset

th column 
\begin_inset Formula $v_{i}$
\end_inset

 of 
\begin_inset Formula $V$
\end_inset

 corresponds to the 
\begin_inset Formula $i$
\end_inset

th Householder reflector 
\begin_inset Formula $Q_{i}=H_{v_{i}}$
\end_inset

 where 
\begin_inset Formula $Q=Q_{1}Q_{2}\cdots Q_{n}$
\end_inset

 is the 
\begin_inset Formula $m\times m$
\end_inset

 orthogonal matrix which appears in full QR factorization 
\begin_inset Formula $A=QR$
\end_inset

.
 
\end_layout

\begin_layout Standard
\align center
\begin_inset listings
inline false
status open

\begin_layout Plain Layout

function [V,R] = house(A) 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

[m,n] = size(A); V = zeros(m,n);
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

for k = 1:n   
\end_layout

\begin_layout Plain Layout

   x = A(k:m,k);     
\end_layout

\begin_layout Plain Layout

   V(k:m,k) = sign(x(1))*norm(x)*eye(m-k+1,1)+x;     
\end_layout

\begin_layout Plain Layout

   V(k:m,k) = V(k:m,k)/norm(V(k:m,k));     
\end_layout

\begin_layout Plain Layout

   A(k:m,k:n) = A(k:m,k:n) - 2*V(k:m,k)*(V(k:m,k)'*A(k:m,k:n));  
\end_layout

\begin_layout Plain Layout

end 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

R = A(1:n,:); 
\end_layout

\end_inset


\end_layout

\begin_layout Subsection*
Evaluate 
\begin_inset Formula $Qb$
\end_inset

 or 
\begin_inset Formula $Q^{*}b$
\end_inset


\end_layout

\begin_layout Standard
\align center
\begin_inset listings
inline false
status open

\begin_layout Plain Layout

function [b] = houseev(V,b,transpose) 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

[m,n] = size(V);
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

if transpose    
\end_layout

\begin_layout Plain Layout

   for k = 1:n       
\end_layout

\begin_layout Plain Layout

     b(k:m) = b(k:m) - 2*V(k:m,k)*(V(k:m,k)'*b(k:m));    
\end_layout

\begin_layout Plain Layout

   end; 
\end_layout

\begin_layout Plain Layout

else    
\end_layout

\begin_layout Plain Layout

   for k = n:-1:1       
\end_layout

\begin_layout Plain Layout

      b(k:m) = b(k:m) - 2*V(k:m,k)*(V(k:m,k)'*b(k:m)); 
\end_layout

\begin_layout Plain Layout

   end; 
\end_layout

\begin_layout Plain Layout

end;
\end_layout

\end_inset


\end_layout

\begin_layout Subsection*
Form 
\begin_inset Formula $\widehat{Q}$
\end_inset

 From House
\end_layout

\begin_layout Standard
\align center
\begin_inset listings
inline false
status open

\begin_layout Plain Layout

function Q = houseformQ(V) 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

[m,n] = size(V); Q = zeros(m,n);
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

for j = 1:n    
\end_layout

\begin_layout Plain Layout

   x = zeros(m,1);    
\end_layout

\begin_layout Plain Layout

   x(j,1) = 1;    
\end_layout

\begin_layout Plain Layout

   Q(:,j) = houseev(V,x,0);
\end_layout

\begin_layout Plain Layout

end;
\end_layout

\end_inset


\end_layout

\begin_layout Subsection*
Least Squares via Householder QR
\end_layout

\begin_layout Standard
\align center
\begin_inset listings
inline false
status open

\begin_layout Plain Layout

function x = leastsquareshouseQR(A,b)
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

[V,R] = house(A);
\end_layout

\begin_layout Plain Layout

y  = houseev(V,b,1);
\end_layout

\begin_layout Plain Layout

y  = y(1:n);
\end_layout

\begin_layout Plain Layout

x = R
\backslash
y;
\end_layout

\end_inset


\end_layout

\begin_layout Subsection*
Back Sub
\end_layout

\begin_layout Standard
\align center
\begin_inset listings
inline false
status open

\begin_layout Plain Layout

function x = backsub(R,b)
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

% Solves the system Rx = b where R is nonsingular uppertriangular mxm matrix
 and b is m-vector
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

m = length(R); x = zeros(m,1);
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

for i = m:-1:1   
\end_layout

\begin_layout Plain Layout

   x(i) = b(i);    
\end_layout

\begin_layout Plain Layout

   for j = i+1:1:m      
\end_layout

\begin_layout Plain Layout

      x(i) = x(i) - x(j)*R(i,j);    
\end_layout

\begin_layout Plain Layout

   end   
\end_layout

\begin_layout Plain Layout

   x(i) = x(i)/R(i,i); 
\end_layout

\begin_layout Plain Layout

end 
\end_layout

\end_inset


\end_layout


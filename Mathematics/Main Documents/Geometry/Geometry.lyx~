\end_layout

\begin_layout Standard
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
begin{center}
\backslash
begin{tikzpicture} 
\backslash
node (S) at (1.25,1) {
\backslash
LARGE $S$}; 
\backslash
node (Bx) at (2,10) {
\backslash
LARGE $E_{x}$}; 
\backslash
node (By) at (5,10) {
\backslash
LARGE $E_{y}$}; 
\backslash

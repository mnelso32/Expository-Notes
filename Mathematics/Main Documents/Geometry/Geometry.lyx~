\backslash
mathcal{F}(U_i 
\backslash
cap U_j )
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout


\backslash

\backslash
 
\backslash
& s 
\backslash
arrow[r,mapsto,shorten >=0.2cm,shorten <=0.2cm] 
\backslash
& (s|_{U_i })_i 
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout


\backslash

\backslash
 

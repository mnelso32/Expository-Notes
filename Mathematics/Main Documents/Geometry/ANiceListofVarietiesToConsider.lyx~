\end_inset


\end_layout

\begin_layout Section
Gluing
\end_layout

\begin_layout Standard
Consider the affine scheme
\begin_inset Formula 
\[
Z:=\mathrm{Spec}\,\Bbbk[s,t,u]\slash\langle u^{3}-st\rangle\cong\mathrm{Spec}\,\Bbbk[x^{3},y^{3},xy].
\]

\end_inset

We can think of 
\begin_inset Formula $Z$
\end_inset

 as the quotient of 
\begin_inset Formula $\mathbb{A}_{\Bbbk}^{2}$
\end_inset

 by the group of third roots of unity with an isolated singularity at the
 origin.
 We resolve this singularity as follows: for 
\begin_inset Formula $i\in\{1,2,3\}$
\end_inset

 let 
\begin_inset Formula $U_{i}=\mathrm{Spec}\,\Bbbk[u_{i},v_{i}]\simeq\mathbb{A}_{\Bbbk}^{2}$
\end_inset

.
 We glue the 
\begin_inset Formula $U_{i}$
\end_inset

 together via
\begin_inset Formula 
\begin{align*}
u_{2} & =u_{1}^{-1} & u_{3} & =v_{1}^{2}u_{1} & u_{3} & =u_{2}^{3}v_{2}^{2}\\
v_{2} & =u_{1}^{2}v_{1} & v_{3} & =v_{1}^{-1} & v_{3} & =u_{2}^{-2}v_{2}^{-1}.
\end{align*}

\end_inset

More precisely, we have the following gluing datum:
\begin_inset Formula 
\[
U_{2}\supset\mathrm{D}(u_{2}):=U_{2,1}\xrightarrow[\simeq]{\varphi_{1,2}}U_{1,2}:=\mathrm{D}(u_{1})\subset U_{1}
\]

\end_inset


\begin_inset Formula 
\[
U_{3}\supset\mathrm{D}(v_{3}):=U_{3,1}\xrightarrow[\simeq]{\varphi_{1,3}}U_{1,3}:=\mathrm{D}(v_{1})\subset U_{1}
\]

\end_inset


\begin_inset Formula 
\[
U_{2}\supset\mathrm{D}(u_{2}v_{2}):=U_{3,2}\xrightarrow[\simeq]{\varphi_{2,3}}U_{2,3}:=\mathrm{D}(u_{3}v_{3})\subset U_{3}
\]

\end_inset

where 
\begin_inset Formula 
\begin{align*}
\varphi_{1,2}(u_{2}) & =u_{1}^{-1} & \varphi_{1,3}(u_{3}) & =v_{1}^{2}u_{1} & \varphi_{2,3}(u_{3}) & =u_{2}^{3}v_{2}^{2}\\
\varphi_{1,2}(v_{2}) & =u_{1}^{2}v_{1} & \varphi_{1,3}(v_{3}) & =v_{1}^{-1} & \varphi_{2,3}(v_{3}) & =u_{2}^{-2}v_{2}^{-1}.
\end{align*}

\end_inset

One checks that the 
\begin_inset Formula $\varphi_{i,j}$
\end_inset

 satisfy the cocycle equation.
 For instance,
\begin_inset Formula 
\begin{align*}
\varphi_{1,2}\varphi_{2,3}(u_{3}) & =\varphi_{1,2}(u_{2}^{3}v_{2}^{2})\\
 & =u_{1}^{-3}(u_{1}^{2}v_{1})^{2}\\
 & =u_{1}v_{1}^{2}\\
 & =\varphi_{1,3}(u_{3}).
\end{align*}

\end_inset

Let 
\begin_inset Formula $\widetilde{Z}$
\end_inset

 denote the scheme obtained by this gluing datum.
 Next, let
\begin_inset Formula 
\[
Z:=\mathrm{Spec}\,\Bbbk[s,t,u]\slash\langle u^{3}-st\rangle\cong\mathrm{Spec}\,\Bbbk[x^{3},y^{3},xy].
\]

\end_inset

We can think of 
\begin_inset Formula $Z$
\end_inset

 as the quotient of 
\begin_inset Formula $\mathbb{A}_{\Bbbk}^{2}$
\end_inset

 by the group of third roots of unity.
 We have maps
\begin_inset Formula 
\begin{align*}
U_{1}\to Z, & \qquad(u_{1},v_{1})\mapsto(u_{1}v_{1}^{2},u_{1}^{2}v_{1},u_{1}v_{1})\\
U_{2}\to Z, & \qquad(u_{2},v_{2})\mapsto(u_{2}^{3}v_{2}^{2},v_{2},u_{2}v_{2})\\
U_{3}\to Z, & \qquad(u_{3},v_{3})\mapsto(u_{3},u_{3}^{2}v_{2}^{3},u_{3}v_{3}),
\end{align*}

\end_inset

which glue to a morphism 
\begin_inset Formula $\pi\colon\widetilde{Z}\to Z$
\end_inset

.
 One checks that the restriction 
\begin_inset Formula $\pi^{-1}(Z\backslash\{\boldsymbol{0}\})\to Z\backslash\{\boldsymbol{0}\}$
\end_inset

 is an isomorphism.
 The closed subscheme 
\begin_inset Formula $\pi^{-1}(\{\boldsymbol{0}\})$
\end_inset

 (with the reduced scheme structure) can be identified with the union (inside
 a 
\begin_inset Formula $\mathbb{P}_{\Bbbk}^{2}$
\end_inset

) of two projective lines intersecting in a single point.
 
\end_layout

\begin_layout Section
Example
\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $A=\Bbbk[x_{0},x_{1},x_{2},x_{3}]\slash\langle f_{1},f_{2},f_{3}\rangle=\Bbbk[\boldsymbol{x}]\slash\boldsymbol{f}$
\end_inset

 where
\begin_inset Formula 
\begin{align*}
f_{1} & =x_{0}^{2}\\
f_{2} & =x_{0}x_{1}\\
f_{3} & =x_{0}x_{2}^{d}-x_{1}x_{3}^{d}
\end{align*}

\end_inset

and let 
\begin_inset Formula $X=\mathrm{Proj}\,A\subseteq\mathbb{P}^{3}$
\end_inset

.
 
\end_layout

